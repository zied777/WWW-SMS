<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp">

    <TextView
        android:id="@+id/message_thread_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text message"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?attr/textAppearanceLabelSmall"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"/>

    <TextView
        android:id="@+id/message_thread_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday, March 23, 2021"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?attr/textAppearanceBodySmall"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/message_body_bg">

        <TextView
            android:id="@+id/message_thred_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Il vous reste moins de 70 Mo de vos options et bonus internet mobile.
            \n Pour continuer a profiter d'internet, composez *124#."
            android:layout_centerInParent="true"
            android:layout_margin="17dp"
            android:textAlignment="textStart"
            android:textAppearance="?attr/textAppearanceBodyLarge"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/message_thred_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:05 AM"
        android:layout_gravity="left"
        android:textAppearance="?attr/textAppearanceBodySmall"/>
</LinearLayout>